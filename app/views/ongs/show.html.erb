  <div class="col-md-12">
    <div class="box">
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <%= image_tag @ong.avatar.url(:medium), class: 'img-responsive' %>
          </div>
          <div class="col-md-9">
            <h1><%= @ong.name %></h1>
            <div class="row">
              <div class="col-md-6">
                <dl class="dl-horizontal">
                  <dt>CNPJ: </dt>
                  <dd><%= @ong.cnpj %></dd>
                  <dt>Telefone: </dt>
                  <dd><%= @ong.phone %></dd>
                  <dt>Email: </dt>
                  <dd><%= @ong.email %></dd>
                  <dt>CEP: </dt>
                  <dd><%= @ong.address.postal_code %></dd>
                  <dt>Site: <dt>
                  <dd><%= link_to @ong.site, "http://#{@ong.site}" %></dd>
                  <dt>Estado: </dt>
                  <dd><%= @ong.address.state %></dd>
                  <dt>Cidade: </dt>
                  <dd><%= @ong.address.city %></dd>
                </dl>
              </div>
              <div class="col-md-6">
                <dl class="dl-horizontal">
                  <dt>Rua: </dt>
                  <dd><%= @ong.address.address %></dd>
                  <dt>Bairro: </dt>
                  <dd><%= @ong.address.neighborhood %></dd>
                  <dt>Número: </dt>
                  <dd><%= @ong.address.address_number %></dd>
                  <dt>Responsável: </dt>
                  <dd><%= @ong.contact %></dd>
                  <dt>ONG aceitas Pets?</dt>
                  <% if @ong.acept_pets %>
                    <dd>Sim</dd>
                  <% else %>
                    <dd>Não</dd>
                  <% end %>
                </dl>
              </div>
              <div class="col-md-6">
                <dl class="dl-horizontal">
                  <dd><%= @ong.description %></dd>
                </dl>
              </div>
              <div class="col-md-6">
                <%= social_share_button_tag(@ong.name, url: ong_url(@ong), desc: @ong.site) %>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
        <section>
          <h1>Pets da ONG</h1>
          <%= render @ong.pets %>
        </section>
        </div>
        <div class="row">
        <section>
          <h1>Eventos da ONG</h1>
          <%= render @ong.events %>
        </section>
        </div>
        <% if ong_signed_in? && current_ong.id == @ong.id %>
          <%= link_to 'Criar Evento', new_ong_event_path(current_ong), class: 'btn btn-primary' %>
          <%= link_to 'Cadastrar Pets', new_ong_pet_path(current_ong), class: 'btn btn-success' %>
        <% end %>
        <%= link_to "Voltar", :back, class:'btn btn-primary' %>
      </div>
    </div>
  </div>

  <h1>Solicitações de adoções</h1>
  <div class="box">
    <section class="adoptions">
      <div class="container-fluid">
            <% @adoptions.each do |adoption| %>
                <div class="adopt-request">
                  <div class="row">
                    <div class="col-md-2"><%= image_tag adoption.pet.avatar.url(:thumb) %></div>
                    <div class="col-md-2"><%= adoption.pet.name %></div>
                    <div class="col-md-2">Usuário :<%= adoption.user.name %></div>
                    <div class="col-md-2"><%= adoption.user.email %></div>
                    <div class="col-md-2"><%= adoption.user.phone %></div>

                    <div class="col-md-2">
                      <%= form_for adoption, html: {class: "nifty_form"} do |f| %>
                      <div class="col-md-6">
                        <%= f.select :status, Adoption.statuses.keys, {}, class: "form-control" %>
                      </div>
                      <div class="col-md-6">
                        <%= f.submit "Salvar", class: 'btn btn-success' %>
                      </div>
                      <% end %>
                    </div>

                    </div>
                  </div>
            <% end %>
          </div>
        </div>
    </section>
  </div>

</div>
