<!-- nav bar -->
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">

<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <%= link_to 'Início', root_path %>
  </li>
  <li class="breadcrumb-item active"><%= @ong.name %></li>
</ol>

<!-- resumt -->
<div class="panel panel-default">
  <div class="panel-heading resume-heading">
    <div class="row">
        <div class="col-lg-12">
          <div class="col-xs-12 col-sm-4">
           <figure>
              <%= image_tag @ong.avatar.url(:medium), class: 'img-circle img-responsive' %>
           </figure>
        </div>
        <div class="col-xs-12 col-sm-8">
           <ul class="list-group">
              <li class="list-group-item"><h3><%= @ong.name %></h3></li>
              <li class="list-group-item">
                <address>
                  <%= link_to 'http://www.google.com.br/maps?'+ @ong.address.postal_code + ',' + @ong.address.address + ',' + @ong.address.address_number + ',' + @ong.address.state + ',' + @ong.address.city , target: '_blank' do %>
                    <%= @ong.address.address %>, <%= @ong.address.address_number %>,
                    <%= @ong.address.neighborhood %><br><%= @ong.address.state %> - <%= @ong.address.city %><br><%= @ong.address.postal_code %>
                  <% end %>
                </address>
              </li>
              <li class="list-group-item"><i class="fa fa-phone"></i>
                <%= link_to 'tel:'+ @ong.phone do %>
                  <span class="bfh-phone" data-format="+55 (dd) ddddd-dddd" data-number="15555555555"></span>
                  <%= @ong.phone %>
                <% end %>
              </li>
              <% if @ong.site.present? %>
                <li class="list-group-item">
                  <%= link_to 'http://'+ @ong.site, target: '_blank' do %>
                    <%= @ong.site %>
                  <% end %>
                </li>
              <% end %>
              <li class="list-group-item">
                <%= link_to 'mailto:'+ @ong.email do %>
                  <i class="fa fa-envelope"></i> <%= @ong.email %>
                <% end %>
              </li>
              <% if @ong.facebook_url.present? %>
                <li class="list-group-item">
                  <%= link_to 'http://'+ @ong.facebook_url, target: '_blank' do %>
                    <i class="fa fa-facebook"></i> Facebook
                  <% end %>
                </li>
              <% end %>
           </ul>
           <% if ong_signed_in? && current_ong.id == @ong.id %>
              <div class="btn-group">
                 <%= link_to edit_ong_registration_path(current_ong), class: 'btn btn-primary' do %>
                    <span class="glyphicon glyphicon-pencil"></span> Editar
                 <% end %>
                 <%= link_to new_ong_pet_path(current_ong), class: 'btn btn-primary' do %>
                    <span class="glyphicon glyphicon-plus"></span> Incluir Pet
                 <% end %>
                 <%= link_to new_ong_event_path(current_ong), class: 'btn btn-primary' do %>
                    <span class="glyphicon glyphicon-calendar"></span> Incluir Evento
                 <% end %>
               </div>
          <% end %>
          <hr>
          <%= social_share_button_tag(@ong.name, url: ong_url(@ong), desc: @ong.site) %>
        </div>
      </div>
    </div>
  </div>

  <% if ong_signed_in? && current_ong.id == @ong.id && @adoptions.count > 0 %>
   <div class="bs-callout bs-callout-danger">
       <h4>Solicitações de adoção</h4>
       <hr>
       <% @adoptions.each do |adoption| %>
         <div class="row">
           <div class="col-xs-2 col-md-2"><%= adoption.pet.name %><%= image_tag adoption.pet.avatar.url(:thumb), class: 'img-responsive' %></div>
           <div class="col-xs-6 col-md-6">
             <%= link_to user_profile_path(adoption.user) do %>
              <%= adoption.user.name %>
             <% end %>
             <hr>
             <%= link_to 'mailto:' + adoption.user.email do %>
              <%= adoption.user.email %>
             <% end %>
             <br>
             <%= link_to 'tel:' + adoption.user.phone do %>
              <%= adoption.user.phone %>
            <% end %>
           </div>
           <br>
           <div class="row">
             <div class="col-xs-6 col-md-6">
               <%= simple_form_for adoption do |f| %>
                 <%= f.select :status, Adoption.statuses.keys, {}, class: "form-control" %>
                 <br>
                 <%= f.submit "Salvar", class: 'btn btn-success' %>
               <% end %>
             </div>
           </div>
         </div>
         <hr>
       <% end %>
   </div>
  <% end %>
 <div class="bs-callout bs-callout-danger">
    <h4>Sobre a ONG</h4>
    <hr>
    <p>
       <%= @ong.description %>
    </p>
    <br>
    <p>
      <h5>Dados mensais sobre a <%= @ong.name %>:
        <ul>
          <li>
            Estima-se que gasta cerca de <%= @ong.estimate_dogs_food_month.to_s %>.
          </li>
        </ul>
    </p>
    <% if ong_signed_in? && current_ong.id == @ong.id %>
      <%= link_to 'Promover doação de ração', '#', class: "btn btn-primary" %>
    <% end %>
 </div>

<% if @ong.events.count > 0 %>
 <div class="bs-callout bs-callout-danger">
     <h4><span class="glyphicon glyphicon-calendar" ></span> Eventos da ONG</h4>
     <hr>
     <div class="row">
       <%= render @ong.events %>
     </div>
 </div>
<% end %>

</div>

<h3>Pet's (<%= @ong.pets.count %>)</h3>
<hr>

<%= render ong_signed_in? && current_ong.id == @ong.id ? @ong.pets.all : @ong.available_pets %>

