  <div class="col-md-12">
    <div class="box">
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <%= image_tag @ong.avatar.url(:medium), class: 'img-responsive' %>
          </div>
          <div class="col-md-9">
            <h1><%= @ong.name %></h1>
            <div class="row">
              <div class="col-md-6">
                <dl class="dl-horizontal">
                  <dt>CNPJ: </dt>
                  <dd><%= @ong.cnpj %></dd>
                  <dt>Telefone: </dt>
                  <dd><%= @ong.phone %></dd>
                  <dt>Email: </dt>
                  <dd><%= @ong.email %></dd>
                  <dt>CEP: </dt>
                  <dd><%= @ong.address.postal_code %></dd>
                  <dt>Site: <dt>
                  <dd><%= link_to @ong.site, "http://#{@ong.site}" %></dd>
                  <dt>Estado: </dt>
                  <dd><%= @ong.address.state %></dd>
                  <dt>Cidade: </dt>
                  <dd><%= @ong.address.city %></dd>
                </dl>
              </div>
              <div class="col-md-6">
                <dl class="dl-horizontal">
                  <dt>Rua: </dt>
                  <dd><%= @ong.address.address %></dd>
                  <dt>Bairro: </dt>
                  <dd><%= @ong.address.neighborhood %></dd>
                  <dt>Número: </dt>
                  <dd><%= @ong.address.address_number %></dd>
                  <dt>Contatos: </dt>
                  <dd><%= @ong.contact %></dd>
                  <dt>ONG aceitas Pets?</dt>
                  <% if @ong.acept_pets %>
                    <dd>Sim</dd>
                  <% else %>
                    <dd>Não</dd>
                  <% end %>
                </dl>
              </div>
              <div class="col-md-6">
                <dl class="dl-horizontal">
                  <dd><%= @ong.description %></dd>
                </dl>
              </div>
              <div class="col-md-6">
                <%= social_share_button_tag(@ong.name, url: ong_url(@ong), desc: @ong.site) %>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
        <section>
          <h1>Pets da ONG</h1>
          <%= render @ong.pets %>
        </section>
        </div>
        <div class="row">
        <section>
          <h1>Eventos da ONG</h1>
          <%= render @ong.events %>
        </section>
        </div>

          <%= link_to "Voltar", :back, class:'btn btn-primary' %>
      </div>
    </div>
  </div>

</div>
