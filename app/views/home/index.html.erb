<div class="container" data-animate="fadeInUpBig">
  <div class="col-md-12">
    <div class="box info-bar">
      <div class="row">
        <div class="col-sm-12 col-md-1 col-md-offset-0 products-showing">
          <strong>Localidade:</strong>
        </div>
        <div class="col-sm-12 col-md-6  products-number-sort">
          <div class="row">
            <%= form_tag(pets_path, method: :get, class: "form-inline") do %>
              <div class="col-md-6 col-sm-6">
                <%=label_tag(:city, "Cidade") %>
                <%= select_tag(:city, options_for_select(@cities), class: 'form-control') %>
                <%= submit_tag("Filtrar", class: 'btn btn-primay') %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="box slideshow">
      <div >
        <a href="#">
          <img src="<%= image_path 'banner_adopt.jpg' %>" alt="Encontre seu próximo amor" style="width:100%">
        </a>
      </div>
    </div>
  </div>
  </div>

  <div id="hot">
    <div id="ongs" class="container">
      <% @ongs.each do |ong| %>
        <div class="panel panel-default">
        <div class="panel-body">
          <div class='col-sm-12 '>
            <h2><%= link_to ong.name, ong %></h2>
          </div>

          <div class="row">
            <% ong.featured_pets.each do |pet| %>

              <div class='col-sm-4'>
              <%= link_to pet do %>
                <h2><%= pet.name %></h2>
                <%= image_tag pet.avatar.url(:medium), class: 'img-responsive center-block' %>
                <% end %>
                <%= social_share_button_tag(pet.name, url: pet_url(pet), desc: pet.description) %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>

    <div id="events" class="container">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class='text-left col-sm-12'>
            <h2 class='text-left'>Próximos Eventos</h2>
          </div>
          <div class="row">
            <%= render @events %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
