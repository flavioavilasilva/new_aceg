<style>
  .carousel-inner > .item > img,
  .carousel-inner > .item > a > img {
      width: 70%;
      margin: auto;
  }

  .carousel-inner a {
    color: #fff;
  }
</style>

  <div class="well well-lg col-sm-12">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
      </ol>
      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <%= image_tag 'adote_um_pet.jpeg', width: "460", height: "345", class: "img-responsive"%>
            <div class="carousel-caption">
              <%= link_to quemsomos_path do %>
                <h4>Adote</h4>
                <p>Saiba mais sobre o portal www.adotarpets.com.br, e nos ajude nessa missão :)</p>
              <% end %>
            </div>
        </div>

        <div class="item">
          <%= image_tag 'adote_um_pet.jpeg', width: "460", height: "345" %>
            <div class="carousel-caption">
              <h4>Alerta do bem <span class="glyphicon glyphicon-bullhorn"></span></h4>
              <p>Saiba o que fazer para ajudar cães de rua.</p>
            </div>
        </div>

        <div class="item">
          <%= image_tag 'adote_um_pet.jpeg', width: "460", height: "345" %>
          <div class="carousel-caption">
            <h4>Cléo</h4>
            <p>Conheça essa linda história de adoçao.</p>
          </div>
        </div>

        <div class="item">
          <%= image_tag 'adote_um_pet.jpeg', width: "460", height: "345" %>
          <div class="carousel-caption">
            <h4>Maus tratos!</h4>
            <p>Ajude a combater.</p>
          </div>
        </div>

      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <hr>
  </div>

  <% @ongs.each do |ong| %>
    <% if ong.pets.count > 0 %>
    <div class="well well-lg col-sm-12">
      <div class="row">
        <div class="col-xs-4 col-md-2">
          <p class="bg-info">
            <h5>
              <%= link_to ong do %>
                <%= image_tag ong.avatar.url(:thumb), class: 'img-circle img-responsive' %><%= ong.name %>
              <% end %>
            </h5>
          </p>
        </div>
        <div class="col-xs-8 col-md-10">
          <%= render ong.featured_pets %>
        </div>
      </div>
      <hr>
    </div>
    <% end %>
  <% end %>

  <% if @events.count > 0 %>
   <div class="bs-callout bs-callout-danger">
       <h3><span class="glyphicon glyphicon-calendar" ></span> Eventos</h3>
       <hr>
       <div class="row">
         <%= render @events %>
       </div>
   </div>
  <% end %>
