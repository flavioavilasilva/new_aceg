<div class="container" data-animate="fadeInUpBig">
  <div class="col-md-12">
    <div class="box info-bar">
      <div class="row">
        <div class="col-sm-12 col-md-1 col-md-offset-0 products-showing">
          <strong>Localidade:</strong>
        </div>
        <div class="col-sm-12 col-md-6  products-number-sort">
          <div class="row">
            <%= form_tag(pets_path, method: :get, class: "form-inline") do %>
              <div class="col-md-6 col-sm-6">
                <%=label_tag(:city, "Cidade") %>
                <%= select_tag(:city, options_for_select(@cities), class: 'form-control') %>
                <%= submit_tag("Filtrar", class: 'btn btn-primay') %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="box slideshow">
      <div >
        <a href="#">
          <img src="<%= image_path 'banner_adopt.jpg' %>" alt="Encontre seu prÃ³ximo amor" style="width:100%">
        </a>
      </div>
    </div>
  </div>
</div>

<div class="container"
  <div id="hot">
    <div id="ongs">
      <% @ongs.each do |ong| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class='col-sm-12 col-md-1 col-md-offset-0'>
            <h2><%= link_to ong.name, ong %></h2>
          </div>
        </div>
      </div>
      <div class="container">
        <div class="same-height-row">
          <%= render ong.featured_pets %>
        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-body">
          <div class='col-sm-12 col-md-1 col-md-offset-0'>
            <h2>Eventos</h2>
          </div>
        </div>
      </div>
      <div class="container">
        <div class="same-height-row">
          <%= render ong.featured_events %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
