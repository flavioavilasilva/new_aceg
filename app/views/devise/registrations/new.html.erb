<%= javascript_include_tag 'cep.js' %>
<h2>Cadastro de usuário</h2>
<div class="col-md-12">
  <div class="box">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :name, label: 'Nome', required: true %>
              <%= f.input :email, label: 'E-mail',required: true, autofocus: true %>
              <%= f.input :phone, label: 'Telefone', required: true %>
              <%= f.input :password, label: 'Senha', required: true, hint: ("#{@minimum_password_length} mínimo de caracteres" if @minimum_password_length) %>
              <%= f.input :password_confirmation, label: 'Confirmação de senha', required: true %>
              <hr>
              <%= f.simple_fields_for :address do |a| %>
                <p><%= a.input :postal_code, label: 'CEP', input_html: {id: "cep"}, placeholder: '04772-010' %></p>
                <p><%= a.input :state, label: 'Estado', placeholder: 'SP', input_html: {id: "estado"} %></p>
                <p><%= a.input :city, label: 'Cidade', input_html: {id: "cidade"} %></p>
                <p><%= a.input :address, label: 'Rua', input_html: {id: "bairro"}, placeholder: 'Av. Paulista' %></p>
                <p><%= a.input :address_number, label: 'Número', placeholder: 'Número 125 - Ap 45' %></p>
                <p><%= a.input :neighborhood, label: 'Bairro', placeholder: 'Bela Vista' %></p>
              <% end %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Cadastrar conta" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
