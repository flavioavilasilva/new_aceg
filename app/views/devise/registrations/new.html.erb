<div class="col-md-12">
<h2>Cadastro de usuário</h2>
  <div class="box">
    <div class="container-fluid">
      <div class="row">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, placeholder: 'seuemail@ong.com.br', required: true, autofocus: true %>
            <%= f.input :name, label: 'Nome', required: true %>
            <%= f.input :state, label: 'Estado', placeholder: 'SP', required: true %>
            <%= f.input :city, label: 'Cidade', placeholder: 'São Paulo', required: true %>
            <%= f.input :phone, label: 'Telefone', placeholder: '(11)55555-5555', required: true %>
            <%= f.input :address, label: 'Endereço', required: true %>
            <%= f.input :password, label: 'Senha', required: true, hint: ("#{@minimum_password_length} mínimo de caracteres" if @minimum_password_length) %>
            <%= f.input :password_confirmation, label: 'Confirmação de senha', required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Cadastrar conta" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
