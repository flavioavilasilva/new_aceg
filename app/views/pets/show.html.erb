<article>
  <h1><%= @pet.name %></h1>
  <%= image_tag @pet.avatar.url %>
  <dl>
    <dt>Idade</dt>
    <dd><%= @pet.age %></dd>
    <dt>Porte</dt>
    <dd><%= @pet.size %></dd>
    <dt>Tipo</dt>
    <dd><%= @pet.pet_type %></dd>
    <dt>Raça</dt>
    <dd><%= @pet.breed %></dd>
    <dt>Gênero</dt>
    <dd><%= @pet.gender %></dd>
    <dt>Vacinado</dt>
    <dd><% if @pet.vaccined? %>
          <i class="glyphicon glyphicon-ok"></i>
        <% else %>
          <i class="glyphicon glyphicon-remove"></i>
        <% end %>
    </dd>
    <dt>Deficiência</dt>
    <dd><%= @pet.deficiency %></dd>
    <dt>Castrado</dt>
    <dd><% if @pet.castrated %>
          <i class="glyphicon glyphicon-ok"></i>
        <% else %>
          <i class="glyphicon glyphicon-remove"></i>
        <% end %></dd>
    <dt>Descrição</dt>
    <dd><%= @pet.description %></dd>
  </dl>
  <hr>
  <h2>ONG Responsável</h2>
  <dl>
    <dd><%= @pet.ong.name %></dd>
    <dt>Endereço</dt>
    <dd><%= @pet.ong.location %></dd>
    <dt>Email</dt>
    <dd><%= @pet.ong.mail %></dd>
    <dt>Telefone</dt>
    <dd><%= @pet.ong.phone %></dd>
    <dt>Contato</dt>
    <dd><%= @pet.ong.contact %></dd>
  </dl>
</article>
