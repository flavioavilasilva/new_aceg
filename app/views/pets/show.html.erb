<!-- resumt -->
<div class="panel panel-default">
  <div class="panel-heading resume-heading">
    <div class="row">
        <div class="col-lg-12">
          <div class="col-xs-12 col-sm-4">
           <figure>
              <%= image_tag @pet.avatar.url(:medium), class: 'img-circle img-responsive' %>
           </figure>
        </div>
        <div class="col-xs-12 col-sm-8">
           <ul class="list-group">
              <li class="list-group-item"><h3><%= @pet.name %></h3></li>
              <li class="list-group-item"><%= @pet.breed %></li>
              <li class="list-group-item">Porte - <%= @pet.size %></li>
              <li class="list-group-item"><%= @pet.age %> anos</li>
              <li class="list-group-item"><%= @pet.castrated %></li>
              <li class="list-group-item"><%= @pet.ong.name %></li>
              <li class="list-group-item"><%= @pet.ong.address.address %>, <%= @pet.ong.address.address_number %>, <%= @pet.ong.address.neighborhood %><br><%= @pet.ong.address.state %> - <%= @pet.ong.address.city %><br><%= @pet.ong.address.postal_code %> </li>
              <li class="list-group-item"><i class="fa fa-phone"></i> <%= @pet.ong.phone %> </li>
              <li class="list-group-item"><%= @pet.ong.site %></li>
              <li class="list-group-item"><i class="fa fa-envelope"></i> <%= @pet.ong.email %> </li>
           </ul>
           <% if @pet.available? %>
              <div class="row">
                <div class="col-xs-3 col-sm-3">
                   <%= button_to ong_pet_adoptions_path(@pet.ong, @pet, @adoption), class: 'btn btn-primary' do %>
                      <span class="glyphicon glyphicon-heart-empty"></span> Adotar
                   <% end %>
                </div>
                <% if ong_signed_in? && current_ong.id == @pet.ong.id %>
                  <div class="col-xs-3 col-sm-2">
                     <%= link_to edit_pet_path(@pet), class: 'btn btn-primary' do %>
                        <span class="glyphicon glyphicon-pencil"></span> Editar
                     <% end %>
                  </div>
                  <div class="col-xs-2 col-sm-3">
                     <%= button_to @pet, class: 'btn btn-primary' do %>
                        <span class="glyphicon glyphicon-remove"></span> <%= @pet.available?  ? "Remover" : "Incluir" %>
                     <% end %>
                  </div>
                <% end %>
              </div>
           <% end %>
          <hr>
          <%= social_share_button_tag(@pet.name, url: ong_url(@pet), desc: @pet.ong.site) %>
        </div>
      </div>
    </div>
  </div>

 <div class="bs-callout bs-callout-danger">
    <h4>Sobre <%="#{@pet.name}"%></h4>
    <hr>
    <p>
       <%= @pet.description %>
    </p>
    <hr>
    <% if @pet.deficiency.empty? %>
      <p><%= @pet.deficiency %></p>
    <% end %>
 </div>
</div>

<% if @pet.photos.count > 0 %>
<div>
  <h4>Galeria de fotos</h4>
  <% @pet.photos.each do |photo| %>
    <%= image_tag photo.image.url(:mini) %>
  <% end %>
</div>
<% end %>

