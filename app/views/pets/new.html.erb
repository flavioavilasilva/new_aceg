<%= simple_form_for @pet do |f| %>
  <%= f.input :name %>
  <%= f.input :avatar, as: :file %>
  <%= f.input :age %>
  <%= f.input :size, collection: @sizes, as: :select%>
  <%= f.input :pet_type, collection: @pet_types, as: :radio_buttons %>
  <%= f.input :breed %>
  <%= f.input :gender, collection: @genders, as: :radio_buttons %>
  <%= f.input :vaccined %>
  <%= f.input :deficiency %>
  <%= f.input :castrated %>
  <%= f.input :description %>
  <%= f.association :ong %>
  <%= f.button :submit %>
<% end %>
