<h1>Cadastrar Pet</h1>
<%= simple_form_for([@ong, @pet], html: {multipart: true}) do |f| %>
  <%= f.input :avatar, as: :file %>
  <%= f.input :name, label: 'Nome' %>
  <%= f.input :age, label: 'Idade' %>
  <%= f.input :size, collection: @sizes, label: 'Porte', as: :select%>
  <%= f.input :pet_type, collection: @pet_types, label: 'Tipo', as: :radio_buttons %>
  <%= f.input :breed, label: 'Raça' %>
  <%= f.input :gender, collection: @genders, label: 'Genero', as: :radio_buttons %>
  <%= f.input :deficiency, label: 'Deficiência' %>
  <%= f.input :castrated, label: 'Castrado' %>
  <%= f.input :vaccined, label: 'Vacinado' %>
  <%= f.input :description, label: 'Descrição' %>

  <h3>Fotos do pet</h3>
  <%= file_field_tag "photos[]", multiple: true %>
  <br>

  <%= f.button :submit, 'Enviar' %>
<% end %>
