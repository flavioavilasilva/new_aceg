<!-- resumt -->
<div class="panel panel-default">
  <div class="panel-heading resume-heading">
    <div class="row">
        <div class="col-lg-12">
          <div class="col-xs-12 col-sm-4">
           <figure>
            <%= image_tag @user.avatar.url(:medium), class: 'img-circle img-responsive' %>
           </figure>
        </div>
        <div class="col-xs-12 col-sm-8">
           <ul class="list-group">
              <li class="list-group-item"><h3><%= @user.name %></h3></li>
              <li class="list-group-item"><%= @user.address.address %>, <%= @user.address.address_number %>, <%= @user.address.neighborhood %><br><%= @user.address.state %> - <%= @user.address.city %><br><%= @user.address.postal_code %> </li>
              <li class="list-group-item"><i class="fa fa-phone"></i> <%= @user.phone %> </li>
              <li class="list-group-item"><i class="fa fa-envelope"></i> <%= @user.email %> </li>
              <li class="list-group-item"><i class="fa fa-facebook"></i> <%= @user.facebook_url %></li>
           </ul>
           <% if user_signed_in? && current_user.id == @user.id %>
              <div class="btn-group">
                 <%= link_to edit_user_registration_path(current_user), class: 'btn btn-primary' do %>
                    <span class="glyphicon glyphicon-pencil"></span> Editar Perfil
                 <% end %>
               </div>
          <% end %>
          <hr>
        </div>
      </div>
    </div>
  </div>

 <% if user_signed_in? %>
  <div class="bs-callout bs-callout-danger">
      <h4>Solicitações de adoção</h4>
      <hr>
      <% @adoptions.each do |adoption| %>
        <div class="row">
          <div class="col-xs-2 col-md-2"><%= adoption.pet.name %><%= image_tag adoption.pet.avatar.url(:thumb), class: 'img-responsive' %></div>
          <div class="col-xs-6 col-md-6">
            <%= adoption.user.name %><br>
            <%= adoption.user.email %><br>
            <%= adoption.user.phone %>
          </div>
          <br>
          <div class="row">
            <div class="col-xs-6 col-md-6">
              <%= simple_form_for adoption do |f| %>
                <%= f.select :status, Adoption.statuses.keys, {}, class: "form-control" %>
                <br>
                <%= f.submit "Salvar", class: 'btn btn-success' %>
              <% end %>
            </div>
          </div>
        </div>
        <hr>
      <% end %>
  </div>
<% end %>

</div>

